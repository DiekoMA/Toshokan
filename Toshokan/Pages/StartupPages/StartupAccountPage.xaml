<Page x:Class="Toshokan.Pages.StartupPages.StartupAccountPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Toshokan.Pages.StartupPages"
      mc:Ignorable="d"
      xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
      xmlns:hc="https://handyorg.github.io/handycontrol"
      MinHeight="450" MinWidth="800">
    <StackPanel>
        <GroupBox Header="Accounts" VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel>
                <hc:Card>
                    <TextBlock Text="Malificent_Melon"></TextBlock>
                </hc:Card>
                <hc:Card>
                    <Button Content="New Account" hc:BorderElement.CornerRadius="3"/>
                </hc:Card>
            </StackPanel>
        </GroupBox>
    </StackPanel>
</Page>
